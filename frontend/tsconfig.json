{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~types/*": [
        "@types/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@layout/*": [
        "src/layout/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "@types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
